<Calculator>:
    name: "calculator"
    BoxLayout:
        orientation: 'vertical'
        Label:
            canvas.before:
                Color:
                    rgba: 0, 0, 1, 0.8
                Rectangle:
                    pos: self.pos
                    size: self.size
            id: result_tab
            text: ""
            text_size: self.size
            halign: 'right'
            size: self.size
            size_hint: 1, None
            height: 150
            font_size: 100
            multiline: "false"
        Button:
            canvas.before:
                Color:
                    rgba: 0, 0, 1, 0.8
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: "Back"
            on_press: app.root.current = "utilities"
        BoxLayout:
            orientation: 'horizontal'
            canvas.before:
                Color:
                    rgba: 0, 0, 1, 0.8
                Rectangle:
                    pos: self.pos
                    size: self.size
            Button:
                text: "7"
                on_press: result_tab.text += "7"
            Button:
                text: "8"
                on_press: result_tab.text += "8"
            Button:
                text: "9"
                on_press: result_tab.text += "9"
            Button:
                text: "/"
                on_press: result_tab.text += "/"
        BoxLayout:
            orientation: 'horizontal'
            canvas.before:
                Color:
                    rgba: 0, 0, 1, 0.8
                Rectangle:
                    pos: self.pos
                    size: self.size
            Button:
                text: "4"
                on_press: result_tab.text += "4"
            Button:
                text: "5"
                on_press: result_tab.text += "5"
            Button:
                text: "6"
                on_press: result_tab.text += "6"
            Button:
                text: "*"
                on_press: result_tab.text += "*"
        BoxLayout:
            orientation: 'horizontal'
            canvas.before:
                Color:
                    rgba: 0, 0, 1, 0.8
                Rectangle:
                    pos: self.pos
                    size: self.size
            Button:
                text: "1"
                on_press: result_tab.text += "1"
            Button:
                text: "2"
                on_press: result_tab.text += "2"
            Button:
                text: "3"
                on_press: result_tab.text += "3"
            Button:
                text: "+"
                on_press: result_tab.text += "+"
        BoxLayout:
            orientation: 'horizontal'
            canvas.before:
                Color:
                    rgba: 0, 0, 1, 0.8
                Rectangle:
                    pos: self.pos
                    size: self.size
            Button:
                text: "0"
                on_press: result_tab.text += "0"
            Button:
                text: "C"
                on_press: result_tab.text = ""
            Button:
                text: "."
                on_press: result_tab.text += "."
            Button:
                text: "-"
                on_press: result_tab.text += "-"
        Button:
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.8
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: "="
            on_press: result_tab.text = str(round(eval(result_tab.text),5))

<Quadratic_solver>:
    name: "quadsolve"
    canvas:
        Color:
            rgba: 0, 0, 1, 0.8
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            Label:
                text: "Enter A:"
                font_size: 50
            TextInput:
                font_size: 50
                id: A
        BoxLayout:
            Label:
                text: "Enter B:"
                font_size: 50
            TextInput:
                font_size: 50
                id: B
        BoxLayout:
            Label:
                text: "Enter C:"
                font_size: 50
            TextInput:
                font_size: 50
                id: C
        BoxLayout:
            Label:
                text: "Answer:"
                font_size: 50
            Label:
                id: answer
        Button:
            text: "Solve"
            on_release: root.Solve()
        Button:
            text: "Back"
            size_hint: 1, None
            on_release: app.root.current = "utilities"

