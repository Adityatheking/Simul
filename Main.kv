#:import FadeTransition kivy.uix.screenmanager.FadeTransition
<AllManager>:
    transition: FadeTransition()
    MainScreen:
    Home:
    Health:
    Education:
    Environment:
    Utilities:
    Calculator:
    Quadratic_solver:
    Diet:
    Diet_label:
        id: dietlabel
    Exercise:
    Exercise_label:
        id: exerciselabel
    Feynman_technique:
    Tree_cost:
    Gardening_hacks:
    Gardening_beginners:
    Gardening_intermediate:
    Gardening_experienced:
    First_aid:
    Easy_plants_to_grow:
    Profitable_trees:

<MainScreen>:
    name: "main"
    FloatLayout:
        canvas:
            Color:
                rgba: (0, 0, 1, 0.8)
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            id: my_button
            text: "Start!"
            font_size: 100
            size_hint: None, None
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size: self.texture_size
            background_color: 1, 1, 0, 1
            on_release: app.root.current = "home"

<Home>:
    name: "home"
    BoxLayout:
        orientation: "vertical"
        padding: 10, 10
        canvas:
            Color:
                rgba: (0, 0, 1, 0.8)
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            padding: 10, 10
            orientation: "horizontal"
            Button:
                text: "Health"
                font_size: 30
                on_release: app.root.current = "health"
            Button:
                text: "Education"
                font_size: 30
                on_release: app.root.current = "education"
        BoxLayout:
            padding: 10, 10
            orientation: "horizontal"
            Button:
                text: "Environment"
                font_size: 30
                on_release: app.root.current = "environment"
            Button:
                text: "Utilities"
                font_size: 30
                on_release: app.root.current = "utilities"


